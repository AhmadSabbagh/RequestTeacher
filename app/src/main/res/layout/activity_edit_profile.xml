<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.am.ahmad.EditProfile">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePic"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="picClick"
        android:src="@drawable/profile"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="30dp" />


    <EditText
        android:id="@+id/nameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profilePic"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:foregroundGravity="right|clip_horizontal"
        android:gravity="center_vertical|center"
        android:hint="الأسم"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textDirection="rtl"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="75dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nameET"
        app:srcCompat="@drawable/person_icon2" />

    <EditText
        android:id="@+id/phoneET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint=" الهاتف"
        android:inputType="phone"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nameET"
        app:srcCompat="@drawable/phone_icon" />

    <Spinner
        android:id="@+id/experiencesET"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phoneET"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="الخبرات"
        android:inputType="phone"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/experiencesET"
        app:srcCompat="@drawable/experiences_icon" />

    <Spinner
        android:id="@+id/majorityET"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/experiencesET"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="التخصص"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textDirection="inherit" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/majorityET"
        app:srcCompat="@drawable/ic_action_name" />

    <Spinner
        android:id="@+id/governetESP"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/majorityET"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="الصفوف الدراسية"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <Spinner
        android:id="@+id/LocationET"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/governetESP"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="عنوان المنزل"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/LocationET"
        app:srcCompat="@drawable/location_icon" />

    <ImageView
        android:id="@+id/imageView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/governetESP"
        app:srcCompat="@drawable/location_icon" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nameET"
        app:srcCompat="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        app:srcCompat="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phoneET"
        app:srcCompat="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/LocationET"
        app:srcCompat="@drawable/edit_icon" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/button_signup"
        android:onClick="Edit"
        android:text="تعديل"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
