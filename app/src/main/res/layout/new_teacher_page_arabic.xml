<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.am.ahmad.Teacher_page">

    <ImageView
        android:id="@+id/special_offer_bu"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/special_offer" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView30"
        android:layout_alignEnd="@+id/imageView32"
        android:layout_alignRight="@+id/imageView32"
        android:text="المزيد...."
        android:textColor="#f1f1"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageView30"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/teacher_page_back" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/imageView34"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        app:srcCompat="@drawable/noti_pic" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/special_offer_bu"
        android:onClick="EditProfile"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/profile_page_teacher" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/imageView35"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/imageView24"
        android:layout_toRightOf="@+id/imageView24"
        android:onClick="aboutUs"
        app:srcCompat="@drawable/about_us_teacher" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/imageView25"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/imageView24"
        android:layout_toRightOf="@+id/imageView24"
        android:onClick="getJob"
        app:srcCompat="@drawable/search_job_teacher" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/imageView34"
        android:layout_alignStart="@+id/imageView34"
        android:layout_below="@+id/imageView24"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:onClick="StatusChange"
        app:srcCompat="@drawable/status_teacher" />

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView31"
        android:layout_toLeftOf="@+id/imageView24"
        android:layout_toStartOf="@+id/imageView24"
        android:onClick="getNormalOffers"
        app:srcCompat="@drawable/offers_teacher" />

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageView24"
        android:layout_toEndOf="@+id/imageView30"
        android:layout_toRightOf="@+id/imageView30"
        android:onClick="AddFile"
        app:srcCompat="@drawable/upload_file_teacher" />


</RelativeLayout>
