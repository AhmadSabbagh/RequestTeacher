<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.am.ahmad.Teacher_upload_files">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/filechose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fileupload"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/fileupload"
                android:layout_gravity="center"
                android:background="@drawable/button_signup"
                android:foregroundGravity="center"
                android:onClick="chose"
                android:text="حدد الملف"
                android:textColor="@color/cardview_light_background" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/FIleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/fileupload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/button_signup"
                android:foregroundGravity="center"
                android:onClick="upload"
                android:text="ارفع الملف"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fileupload"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:text="تحميل الملف"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <de.codecrafters.tableview.TableView
                android:id="@+id/tableView"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:textAlignment="textStart"
                android:textDirection="rtl">

            </de.codecrafters.tableview.TableView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
