<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.am.ahmad.Student_Reg">

    <EditText
        android:id="@+id/phoneET"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:gravity="left"
        android:inputType="phone"
        android:text="7"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameET"
        android:layout_alignRight="@+id/nameET"
        android:layout_alignTop="@+id/phoneET"
        app:srcCompat="@drawable/phone_icon" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passET"
        android:ems="10"
        android:foregroundGravity="right|clip_horizontal"
        android:gravity="center_vertical|center"
        android:hint="الأسم الثلاثي"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textDirection="rtl"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="75dp" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/nameET"
        android:layout_alignRight="@+id/nameET"
        android:layout_alignTop="@+id/nameET"
        app:srcCompat="@drawable/person_icon2" />


    <EditText
        android:id="@+id/parentPhoneEt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nameET"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:gravity="left"
        android:inputType="phone"
        android:text="7"
        android:textAlignment="gravity"
        android:textDirection="rtl">

    </EditText>
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/governetSp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView13"
        app:srcCompat="@drawable/phone_icon" />

    <Spinner
        android:id="@+id/LocationET"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:layout_below="@+id/governetSp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="عنوان المنزل"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <Spinner
        android:id="@+id/governetSp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/parentPhoneEt" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/parentPhoneEt"
        android:layout_alignRight="@+id/parentPhoneEt"
        android:layout_alignTop="@+id/LocationET"
        app:srcCompat="@drawable/location_icon" />

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/governetSp"
        app:srcCompat="@drawable/location_icon" />

    <Button
        android:id="@+id/signup_bu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:alpha="0.8"
        android:background="@drawable/button_signup"
        android:onClick="sign_in"
        android:text="دخول"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/passET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phoneET"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        android:textAlignment="gravity"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/passET"
        app:srcCompat="@drawable/lock_icon" />

    <Spinner
        android:id="@+id/nationalityET"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/signup_bu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="البلد"
        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textDirection="rtl"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LocationET"
        android:visibility="invisible"

        app:srcCompat="@drawable/nationality_icon" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/parentPhoneEt" />


    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/spinner2"
        android:layout_alignTop="@+id/phoneET"
        android:layout_gravity="center_vertical"
        app:ccp_countryAutoDetectionPref="SIM_NETWORK_LOCALE"
        app:ccp_countryPreference="pk,in,us"
        app:ccp_hintExampleNumber="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="14sp"
        android:text="رقم الهاتف : الرجاء ادخال رقم الهاتف بدون صفر"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3"
        android:text="رقم هاتف ولي الامر : الرجاء ادخال رقم الهاتف بدون صفر"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>
