<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/datej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/typej"
            android:layout_alignBottom="@+id/typej"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/nameJ"
            android:layout_toRightOf="@+id/nameJ"
            android:text="TextView"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratej"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameJ"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/nameJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/typej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratej"
            android:layout_marginEnd="23dp"
            android:layout_marginLeft="270dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="80dp"
            android:layout_toLeftOf="@+id/nameJ"
            android:layout_toStartOf="@+id/nameJ"
            android:text="TextView"
            android:textDirection="rtl"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>